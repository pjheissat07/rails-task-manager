<div class="task_details">
<h1><%= @task.title %></h1>

<h2><%= @task.details %></h2>

<h3>
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <h2> Cette tâche a été réalisée </h2>
  <% else %>
    <i class="far fa-square"></i>
    <h2> Cette tâche est encore à faire </h2>
  <% end %>
</h3>

<h3><%= link_to "Revenir en arrière", tasks_path %></h3>

<h3><%= link_to "Editer une tâche", edit_path %></h3>

<%= link_to "Delete", task_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>

</div>
